{
  "name": "mixaroo-lite",
  "version": "1.0.0",
  "description": "AI-powered CLI tool that generates playlists and creates YouTube playback links",
  "main": "dist/cli.js",
  "bin": {
    "mx-lite": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "playlist",
    "music",
    "youtube",
    "ai",
    "cli",
    "openai",
    "gemini",
    "anthropic"
  ],
  "author": "schoolofai",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "!dist/**/__tests__/**",
    "!dist/**/*.test.*"
  ],
  "dependencies": {
    "@anthropic-ai/sdk": "^0.77.0",
    "@google/generative-ai": "^0.24.1",
    "@types/yt-search": "^2.10.3",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "conf": "^12.0.0",
    "inquirer": "^9.2.15",
    "open": "^11.0.0",
    "openai": "^6.22.0",
    "ora": "^8.0.1",
    "yt-search": "^2.13.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.3",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^20.11.0",
    "eslint": "^9.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^2.1.9"
  },
  "overrides": {
    "minimatch": ">=10.2.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/schoolofai/mixaroo-lite.git"
  },
  "homepage": "https://github.com/schoolofai/mixaroo-lite#readme"
}
