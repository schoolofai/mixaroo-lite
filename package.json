{
  "name": "mixaroo-lite",
  "version": "1.0.0",
  "description": "AI-powered CLI tool that generates playlists and creates YouTube playback links",
  "main": "dist/cli.js",
  "bin": {
    "mx-lite": "./dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "playlist",
    "music",
    "youtube",
    "ai",
    "cli",
    "openai",
    "gemini",
    "anthropic"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@anthropic-ai/sdk": "^0.77.0",
    "@google/generative-ai": "^0.24.1",
    "@types/yt-search": "^2.10.3",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "conf": "^12.0.0",
    "inquirer": "^9.2.15",
    "openai": "^6.22.0",
    "ora": "^8.0.1",
    "yt-search": "^2.13.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^2.1.9",
    "typescript": "^5.9.3",
    "vitest": "file:vitest-2.1.9.tgz"
  }
